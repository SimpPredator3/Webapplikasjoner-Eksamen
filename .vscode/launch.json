{
    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch (web)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/WebMVC/bin/Debug/net8.0/WebMVC.dll",
            "args": [],
            "cwd": "${workspaceFolder}/WebMVC",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": "C#: WebMVC",
            "type": "dotnet",
            "request": "launch",
            "projectPath": "${workspaceFolder}\\WebMVC\\WebMVC.csproj",
            "launchConfigurationId": "TargetFramework=;WebMVC"
        }
    ]
}